@page "/unitlist"
@inject IStringLocalizer<AppStrings> localizer

<h1>@localizer["HeaderUnit"]</h1>



<DxGrid Data="@Units"
        CssClass="mw-1100"
        EditMode="GridEditMode.PopupEditForm"
        KeyFieldName="Code">

    <Columns>

       
        <DxGridDataColumn Caption="@localizer["CodeUnits"]" FieldName="Code" Width="10%" />
        <DxGridDataColumn Caption="@localizer["LabelUnits"]" FieldName="Label" />
        <DxGridDataColumn Caption="@localizer["NameUnits"]" FieldName="Name" />
        <DxGridDataColumn Caption="@localizer["IsActiveUnits"]"  FieldName="IsActive" />
        <DxGridCommandColumn>
            <HeaderTemplate>
                <a class="oi oi-plus" style="text-decoration: none;" href="javascript:void(0);">@localizer["NewUnits"]</a>
            </HeaderTemplate>
            <CellDisplayTemplate>
                <a class="oi oi-pencil" Text="dx-icon-aligncenter" style="text-decoration: none; margin-right: 5px;" href="javascript:void(0);">@localizer["EditUnits"]</a>
                <a class="oi oi-x" style="text-decoration: none; color: #DC143C;" href="javascript:void(0);">@localizer["DeleteUnits"]</a>
            </CellDisplayTemplate>
        </DxGridCommandColumn>


    </Columns>

</DxGrid>



