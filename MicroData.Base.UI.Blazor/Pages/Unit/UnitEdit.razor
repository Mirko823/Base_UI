@page "/unitedit/{unitId}"
@inject NavigationManager NavigationManager
@using DevExpress.Blazor
@inject IStringLocalizer<BaseStrings> baseLocalizer
@inject IStringLocalizer<CommonStrings> commonLocalizer
@rendermode InteractiveServer

<div class="header-container">
    <h3>@baseLocalizer["UnitChange"]</h3>
</div>


<DxFormLayout>
    <DxFormLayoutItem Caption="@baseLocalizer["CodeUnits"]">
        <DxTextBox @bind-Text="unit.Code"  />
    </DxFormLayoutItem>
    <DxFormLayoutItem Caption="@baseLocalizer["LabelUnits"]">
        <DxTextBox @bind-Text="unit.Label"/>
    </DxFormLayoutItem>
    <DxFormLayoutItem Caption="@baseLocalizer["NameUnits"]">
        <DxTextBox @bind-Text="unit.Name" />
    </DxFormLayoutItem>
    <DxFormLayoutItem Caption="@baseLocalizer["IsActiveUnits"]">
        <DxCheckBox @bind-Checked="unit.IsActive" />
    </DxFormLayoutItem>
    <DxFormLayoutItem>
        <ChildContent Context="buttonContext">
            <DxButton Click="SaveUnit">@commonLocalizer["Save"]</DxButton>
            <DxButton Click="Cancel">@commonLocalizer["Close"]</DxButton>
        </ChildContent>
    </DxFormLayoutItem>
</DxFormLayout>


<div>
    <button @onclick="ChangeText">Klikni me</button>

</div>

<p>@message</p>